cd `dirname $0`

#echo "bake"
#node js/bake.js

EXORCIST=node_modules/exorcist/bin/exorcist.js
BROWSERIFY=node_modules/browserify/bin/cmd.js

echo "browserify"

$BROWSERIFY -g uglifyify -r ./js/plated_live.js:plated_live -d | $EXORCIST html/js/plated_live.js.map > html/js/plated_live.js
$BROWSERIFY -g uglifyify -r ./js/plated_live_worker.js:plated_live_worker -d | $EXORCIST html/js/plated_live_worker.js.map > html/js/plated_live_worker.js

