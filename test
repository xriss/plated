cd `dirname $0`

if [ "$1" = "copy" ] ; then

echo
echo " COPY OUTPUT TO EXPECTED "
echo

rm -rf test-expected
cp test-output test-expected -r

else

echo
echo " BUILDING "
echo

rm -rf test-output
./plated build --source=test-source --output=test-output --dumpjson

echo
echo " TESTING "
echo

diff -r --side-by-side --suppress-common-lines test-output test-expected
TEST=$?

echo
diff -r -q --suppress-common-lines test-output test-expected
echo

if [ $TEST = 0 ] ; then
	echo
	echo "$(tput setaf 2) PASSED $(tput sgr0)"
	echo
#	exit 0
else
	echo
	echo "$(tput setaf 1) FAILED $(tput sgr0)"
	echo
#	exit 1
fi

fi
